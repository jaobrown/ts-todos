{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "sourceMap": false,
    "removeComments": true
  },
  "include": [
    "src/**/*",
    "index.ts"
  ],
  "exclude": [
    "**/*.test.ts",
    "**/*.spec.ts",
    "test/**/*",
    "tools/**/*",
    "scripts/**/*"
  ]
}